{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "on_discover",
  "type": "object",
  "properties": {
    "context": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Version of the Beckn protocol"
        },
        "action": {
          "type": "string",
          "enum": ["on_discover"],
          "description": "API endpoint callback"
        },
        "domain": {
          "type": "string",
          "description": "Identifier of the domain"
        },
        "location": {
          "type": "object",
          "properties": {
            "country": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string",
                  "description": "Country code as per ISO 3166-1 alpha-3 standard"
                }
              },
              "required": ["code"]
            },
            "city": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string",
                  "description": "City code"
                }
              },
              "required": ["code"]
            }
          },
          "required": ["country", "city"]
        },
        "bap_id": {
          "type": "string",
          "description": "Identification of the BAP"
        },
        "bap_uri": {
          "type": "string",
          "format": "uri",
          "description": "BAP endpoint"
        },
        "bpp_id": {
          "type": "string",
          "description": "Identification of the BPP"
        },
        "bpp_uri": {
          "type": "string",
          "format": "uri",
          "description": "BPP endpoint"
        },
        "transaction_id": {
          "type": "string",
          "description": "Transaction identifier"
        },
        "message_id": {
          "type": "string",
          "description": "Message identifier"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Time at which the response was generated"
        },
        "ttl": {
          "type": "string",
          "description": "Time to live (ISO 8601 duration format)"
        },
        "schema_context": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Schema context URLs"
        }
      },
      "required": ["version", "action", "domain", "location", "bap_id", "bap_uri", "bpp_id", "bpp_uri", "transaction_id", "message_id", "timestamp"]
    },
    "message": {
      "type": "object",
      "properties": {
        "catalogs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "beckn:descriptor": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "code": {
                    "type": "string"
                  },
                  "symbol": {
                    "type": "string"
                  },
                  "short_desc": {
                    "type": "string"
                  },
                  "long_desc": {
                    "type": "string"
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "url": {
                          "type": "string",
                          "format": "uri"
                        }
                      }
                    }
                  }
                }
              },
              "beckn:items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "@context": {
                      "type": "string",
                      "format": "uri"
                    },
                    "@type": {
                      "type": "string",
                      "enum": ["beckn:Item"]
                    },
                    "beckn:id": {
                      "type": "string"
                    },
                    "beckn:descriptor": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "code": {
                          "type": "string"
                        },
                        "symbol": {
                          "type": "string"
                        },
                        "short_desc": {
                          "type": "string"
                        },
                        "long_desc": {
                          "type": "string"
                        },
                        "images": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "url": {
                                "type": "string",
                                "format": "uri"
                              }
                            }
                          }
                        }
                      }
                    },
                    "beckn:price": {
                      "type": "object",
                      "properties": {
                        "currency": {
                          "type": "string"
                        },
                        "value": {
                          "type": "string"
                        },
                        "minimum_value": {
                          "type": "string"
                        },
                        "maximum_value": {
                          "type": "string"
                        }
                      },
                      "required": ["currency", "value"]
                    },
                    "beckn:category_id": {
                      "type": "string"
                    },
                    "beckn:location_id": {
                      "type": "string"
                    },
                    "beckn:time": {
                      "type": "object",
                      "properties": {
                        "label": {
                          "type": "string"
                        },
                        "timestamp": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "duration": {
                          "type": "string"
                        },
                        "range": {
                          "type": "object",
                          "properties": {
                            "start": {
                              "type": "string",
                              "format": "date-time"
                            },
                            "end": {
                              "type": "string",
                              "format": "date-time"
                            }
                          }
                        },
                        "schedule": {
                          "type": "object"
                        },
                        "days": {
                          "type": "string"
                        }
                      }
                    },
                    "beckn:availableAt": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "@context": {
                            "type": "string",
                            "format": "uri"
                          },
                          "@type": {
                            "type": "string",
                            "enum": ["schema:Place"]
                          },
                          "beckn:id": {
                            "type": "string"
                          },
                          "descriptor": {
                            "type": "object",
                            "properties": {
                              "name": {
                                "type": "string"
                              },
                              "code": {
                                "type": "string"
                              },
                              "symbol": {
                                "type": "string"
                              },
                              "short_desc": {
                                "type": "string"
                              },
                              "images": {
                                "type": "array",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "url": {
                                      "type": "string",
                                      "format": "uri"
                                    }
                                  }
                                }
                              }
                            }
                          },
                          "geo": {
                            "type": "object",
                            "properties": {
                              "type": {
                                "type": "string",
                                "enum": ["Point"]
                              },
                              "coordinates": {
                                "type": "array",
                                "items": {
                                  "type": "number"
                                },
                                "minItems": 2,
                                "maxItems": 2
                              }
                            }
                          },
                          "gps": {
                            "type": "string"
                          },
                          "address": {
                            "type": "object",
                            "properties": {
                              "area_code": {
                                "type": "string"
                              },
                              "city": {
                                "type": "string"
                              },
                              "country": {
                                "type": "string"
                              },
                              "door": {
                                "type": "string"
                              },
                              "locality": {
                                "type": "string"
                              },
                              "name": {
                                "type": "string"
                              },
                              "state": {
                                "type": "string"
                              },
                              "street": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    },
                    "beckn:rating": {
                      "type": "object",
                      "properties": {
                        "rating_value": {
                          "type": "string"
                        },
                        "rating_count": {
                          "type": "number"
                        },
                        "rating_ack": {
                          "type": "boolean"
                        }
                      }
                    },
                    "beckn:tags": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "descriptor": {
                            "type": "object",
                            "properties": {
                              "name": {
                                "type": "string"
                              },
                              "code": {
                                "type": "string"
                              }
                            }
                          },
                          "list": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "descriptor": {
                                  "type": "object",
                                  "properties": {
                                    "name": {
                                      "type": "string"
                                    },
                                    "code": {
                                      "type": "string"
                                    }
                                  }
                                },
                                "value": {
                                  "type": "string"
                                },
                                "display": {
                                  "type": "boolean"
                                }
                              }
                            }
                          },
                          "display": {
                            "type": "boolean"
                          }
                        }
                      }
                    },
                    "beckn:itemAttributes": {
                      "type": "object",
                      "description": "EV Charging Service specific attributes"
                    },
                    "beckn:offers": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "@context": {
                            "type": "string",
                            "format": "uri"
                          },
                          "@type": {
                            "type": "string",
                            "enum": ["beckn:Offer"]
                          },
                          "beckn:id": {
                            "type": "string"
                          },
                          "beckn:descriptor": {
                            "type": "object",
                            "properties": {
                              "name": {
                                "type": "string"
                              },
                              "code": {
                                "type": "string"
                              },
                              "short_desc": {
                                "type": "string"
                              }
                            }
                          },
                          "beckn:price": {
                            "type": "object",
                            "properties": {
                              "currency": {
                                "type": "string"
                              },
                              "value": {
                                "type": "string"
                              },
                              "applicableQuantity": {
                                "type": "object",
                                "properties": {
                                  "unitText": {
                                    "type": "string"
                                  },
                                  "unitCode": {
                                    "type": "string"
                                  },
                                  "unitQuantity": {
                                    "type": "number"
                                  }
                                }
                              }
                            },
                            "required": ["currency", "value"]
                          },
                          "beckn:validity": {
                            "type": "object",
                            "properties": {
                              "@type": {
                                "type": "string"
                              },
                              "schema:startDate": {
                                "type": "string",
                                "format": "date-time"
                              },
                              "schema:endDate": {
                                "type": "string",
                                "format": "date-time"
                              }
                            }
                          },
                          "beckn:offerAttributes": {
                            "type": "object"
                          }
                        }
                      }
                    }
                  },
                  "required": ["@type", "beckn:id"]
                },
                "minItems": 1
              },
              "beckn:providers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "@context": {
                      "type": "string",
                      "format": "uri"
                    },
                    "@type": {
                      "type": "string",
                      "enum": ["beckn:Provider"]
                    },
                    "beckn:id": {
                      "type": "string"
                    },
                    "beckn:descriptor": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "code": {
                          "type": "string"
                        },
                        "short_desc": {
                          "type": "string"
                        },
                        "images": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "url": {
                                "type": "string",
                                "format": "uri"
                              }
                            }
                          }
                        }
                      }
                    },
                    "beckn:locations": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "beckn:categories": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "beckn:fulfillments": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  },
                  "required": ["@type", "beckn:id"]
                }
              }
            },
            "minItems": 1
          }
        }
      },
      "required": ["catalogs"]
    },
    "error": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "required": ["context", "message"],
  "additionalProperties": false
}
