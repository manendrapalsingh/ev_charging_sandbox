{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cancel",
  "type": "object",
  "properties": {
    "context": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Version of the Beckn protocol"
        },
        "action": {
          "type": "string",
          "enum": ["cancel"],
          "description": "API endpoint to be called"
        },
        "domain": {
          "type": "string",
          "description": "Identifier of the domain"
        },
        "location": {
          "type": "object",
          "properties": {
            "country": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string",
                  "description": "Country code as per ISO 3166-1 alpha-3 standard"
                }
              },
              "required": ["code"]
            },
            "city": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string",
                  "description": "City code"
                }
              },
              "required": ["code"]
            }
          },
          "required": ["country", "city"]
        },
        "bap_id": {
          "type": "string",
          "description": "Identification of the BAP"
        },
        "bap_uri": {
          "type": "string",
          "format": "uri",
          "description": "BAP endpoint"
        },
        "bpp_id": {
          "type": "string",
          "description": "Identification of the BPP"
        },
        "bpp_uri": {
          "type": "string",
          "format": "uri",
          "description": "BPP endpoint"
        },
        "transaction_id": {
          "type": "string",
          "description": "Transaction identifier"
        },
        "message_id": {
          "type": "string",
          "description": "Message identifier"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Time at which the request was generated"
        },
        "ttl": {
          "type": "string",
          "description": "Time to live (ISO 8601 duration format)"
        },
        "schema_context": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Schema context URLs"
        }
      },
      "required": ["version", "action", "domain", "location", "bap_id", "bap_uri", "bpp_id", "bpp_uri", "transaction_id", "message_id", "timestamp"]
    },
    "message": {
      "type": "object",
      "properties": {
        "order": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "type": "string",
                "enum": ["beckn:Order"],
                "description": "Order type"
              },
              "beckn:id": {
                "type": "string",
                "description": "Order identifier"
              },
              "beckn:orderItems": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "beckn:orderedItem": {
                      "type": "string",
                      "description": "Ordered item identifier"
                    }
                  },
                  "required": ["beckn:orderedItem"]
                }
              }
            },
            "required": ["@type", "beckn:id"]
          },
          "minItems": 1
        }
      },
      "required": ["order"]
    }
  },
  "required": ["context", "message"],
  "additionalProperties": false
}
